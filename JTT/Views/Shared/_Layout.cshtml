<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - JTT</title>
    <link rel="icon" href="~/Images/logo.png" type="image/x-icon">
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="overflow-y-scroll ">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light shadow">
        <div class="container-fluid px-lg-5">
            <img src="~/Images/logo.png" alt="JTT logo" style="width:3rem" class="pe-2" />
            @Html.ActionLink("Joy Tara Transport", "Index", "Home", new { area = "" }, new { @class = "navbar-brand fw-bold" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav  ms-auto gap-3">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    @*<li>@Html.ActionLink("Login", "Login", "Account", new { area = "" }, new { @class = "nav-link bg-logo rounded px-4" })</li>*@
                <li class="nav-item">
                    <a class="nav-link bg-logo rounded px-4" href="@Url.Action("Login", "Account")">
                        Login
                    </a>
                </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid p-0 m-0">
        @RenderBody()
        <hr />
        <!-- Footer -->
        <footer class="footer py-5 container-fluid">
            <div class="container">
                <div class="row g-4">
                    <div class="col-md-4">
                        <h5>Joy Tara Transport</h5>
                        <p class="small">Your partner in reliable and efficient logistics. Delivering excellence, every mile.</p>
                    </div>
                    <div class="col-md-4">
                        <h6>Quick Links</h6>
                        <ul class="list-unstyled small">
                            <li><a href="#services">Services</a></li>
                            <li><a href="#about">About Us</a></li>
                            <li><a href="#contact">Contact</a></li>
                            <li><a href="#">Get a Quote</a></li>
                        </ul>
                    </div>
                    <div class="col-md-4">
                        <h6>Contact Us</h6>
                        <p class="small mb-1"><span class="material-symbols-outlined me-1"><i class="bi bi-geo-alt"></i></span>Amlagora New Market, Garhbeta, West Bengal</p>
                        <p class="small mb-1"><span class="material-symbols-outlined me-1"><i class="bi bi-telephone"></i></span><a href="callto:8509362322" class="text-decoration-none text-light">+91 8509362322</a></p>
                        <p class="small"><span class="material-symbols-outlined me-1"><i class="bi bi-envelope"></i></span><a href="mailto:bidmanpal.self@gmail.com" class="text-decoration-none text-light">bimanpal.self@gmail.com</a></p>
                    </div>
                   
                </div>
                <div class="text-center border-top border-light pt-3 mt-4 small">&copy; 2025 Joy Tara Transport. All Rights Reserved.</div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
