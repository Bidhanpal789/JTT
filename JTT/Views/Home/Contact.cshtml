@{
    ViewBag.Title = "Contact";
}
<style>
    body {
        font-family: 'Manrope', sans-serif;
        background-color: #f4f4f4;
        color: #333;
    }

    .navbar-brand svg {
        width: 24px;
        height: 24px;
        color: #003366;
    }

    .bg-primary-custom {
        background-color: #003366;
    }

    .text-primary-custom {
        color: #003366;
    }

    .text-secondary-custom {
        color: #ff6600;
    }

    .bg-secondary-custom {
        background-color: #ff660065;
    }

    .shadow-md {
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .material-symbols-outlined {
        vertical-align: middle;
        font-size: 24px;
    }
</style>
<main class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h1 class="display-5 fw-bold text-primary-custom">Contact Us</h1>
            <p class="lead text-muted">We're here to help. Reach out to us with any questions or quote requests.</p>
        </div>

        <div class="row g-4">
            <!-- Left Column -->
            <div class="col-lg-4">
                <div class="bg-white rounded-4 p-4 shadow-md mb-4">
                    <h3 class="fw-bold text-primary-custom mb-4">Contact Information</h3>
                    <div class="d-flex mb-3">
                        <div class="col-2">
                            <div class="bg-secondary-custom bg-opacity-25 p-2 rounded me-3 d-flex align-items-center justify-content-center">
                                <span class="material-symbols-outlined text-secondary-custom"><i class="bi bi-telephone"></i></span>
                            </div>
                        </div>
                        <div class="col-10">
                            <p class="mb-0 fw-medium">General Inquiries</p>
                            <a href="callto:8509362322" class="text-decoration-none text-secondary">+91 8509362322</a>
                        </div>
                    </div>

                    <div class="d-flex mb-3">
                        <div class="col-2">
                            <div class="bg-secondary-custom bg-opacity-25 p-2 rounded me-3 d-flex align-items-center justify-content-center">
                                <span class="material-symbols-outlined text-secondary-custom"><i class="bi bi-envelope"></i></span>
                            </div>
                        </div>
                        <div class="col-10">
                            <p class="mb-0 fw-medium">Email Us</p>
                            <a href="mailto:bidmanpal.self@gmail.com" class="text-decoration-none text-secondary">bimanpal.self@gmail.com</a>
                        </div>
                    </div>

                    <div class="d-flex">
                        <div class="col-2">
                            <div class="bg-secondary-custom bg-opacity-25 p-2 rounded me-3 d-flex align-items-center justify-content-center">
                                <span class="material-symbols-outlined text-secondary-custom"><i class="bi bi-geo-alt"></i></span>
                            </div>
                        </div>
                        <div class="col-10">
                            <p class="mb-0 fw-medium">Our Office</p>
                            <p class="text-muted mb-0">Amlagora New Market, Garhbeta, <br>West Bengal, India</p>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-4 p-4 shadow-md">
                    <h3 class="fw-bold text-primary-custom mb-4">Business Hours</h3>
                    <ul class="list-unstyled mb-0 text-muted">
                        <li class="d-flex justify-content-between"><span>Monday - Friday</span><span class="fw-medium text-dark">24 hrs</span></li>
                        <li class="d-flex justify-content-between"><span>Saturday</span><span class="fw-medium text-dark">10:00 AM - 8:00 PM</span></li>
                        <li class="d-flex justify-content-between"><span>Sunday</span><span class="fw-medium text-danger">Closed</span></li>
                    </ul>
                </div>
            </div>

            <!-- Right Column -->
            <div class="col-lg-8">
                <div class="bg-white rounded-4 p-4 shadow-md">
                    <h3 class="fw-bold text-primary-custom mb-4">Send us a Message</h3>
                    <form method="POST" action="#">
                        <div class="mb-3">
                            <label for="full-name" class="form-label">Full Name</label>
                            <input type="text" id="full-name" name="full-name" class="form-control" placeholder="John Doe" />
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" id="email" name="email" class="form-control" placeholder="you@example.com" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="phone" class="form-label">Phone</label>
                                <input type="tel" id="phone" name="phone" class="form-control" placeholder="(123) 456-7890" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="subject" class="form-label">Subject</label>
                            <input type="text" id="subject" name="subject" class="form-control" placeholder="Quote for shipping" />
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label">Your Message</label>
                            <textarea id="message" name="message" rows="4" class="form-control" placeholder="Please provide details about your inquiry..."></textarea>
                        </div>
                        <button type="submit" class="btn bg-primary-custom text-white w-100 fw-bold py-2">Submit Inquiry</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Map Section -->
        <div class="mt-5">
            <h2 class="text-center fw-bold text-primary-custom mb-4">Our Location</h2>
            <div class="ratio ratio-16x9 rounded-4 shadow-md overflow-hidden">
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d7361.252661266607!2d87.342335!3d22.846344!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sin!4v1730916570000!5m2!1sen!2sin"
                        width="100%"
                        height="450"
                        style="border:0; border-radius:16px;"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade">
                </iframe>

            </div>
        </div>
    </div>
</main>