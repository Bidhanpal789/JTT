@{
    ViewData["Title"] = "Home";
}

<main class="container">
    <!-- Hero Section -->
    <section class="text-dark text-center py-5">
        <div class="container-fluid hero p-5 rounded">

            <div class="my-5 py-5">
                <div class="py-3">
                    <h1 class="display-4 fw-semibold">Welcome to Joy Tara Transport</h1>
                    <p class="lead ">Efficiently manage your truck inventory, orders, and profits with our streamlined platform.</p>
                </div>
            </div>


        </div>
    </section>


    <!-- Why Choose Us -->
    <section class="py-5" id="about">
        <div class="container text-center">
            <h2 class="fw-bold mb-3">Your Trusted Logistics Partner</h2>
            <p class="text-muted mb-5">
                We are committed to providing top-tier transport services with a focus on safety,
                efficiency, and customer satisfaction.
            </p>

            <div class="row g-4">
                <div class="col-md-3 col-6">
                    <div class="feature-box">
                        <span class="material-symbols-outlined text-primary fs-1 mb-2"><i class="bi bi-clock"></i></span>
                        <h5>On-Time Delivery</h5>
                        <p class="text-muted small">Your shipments arrive right on schedule.</p>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="feature-box">
                        <span class="material-symbols-outlined text-primary fs-1 mb-2"><i class="bi bi-shield-check"></i></span>
                        <h5>Safety-First Approach</h5>
                        <p class="text-muted small">We follow the highest safety standards.</p>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="feature-box">
                        <span class="material-symbols-outlined text-primary fs-1 mb-2"><i class="bi bi-geo-alt"></i></span>
                        <h5>Advanced Tracking</h5>
                        <p class="text-muted small">Track your shipments in real time.</p>
                    </div>
                </div>
                <div class="col-md-3 col-6">
                    <div class="feature-box">
                        <span class="material-symbols-outlined text-primary fs-1 mb-2"><i class="bi bi-headset"></i></span>
                        <h5>24/7 Support</h5>
                        <p class="text-muted small">We’re available whenever you need us.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Services -->
    <section class="py-5 bg-light" id="services">
        <div class="container text-center">
            <h2 class="fw-bold mb-3">Our Comprehensive Services</h2>
            <p class="text-muted mb-5">Tailored solutions to meet your logistics needs.</p>

            <div class="row g-4">
                <div class="col-md-4">
                    <div class="feature-box">
                        <span class="material-symbols-outlined text-warning fs-1 mb-3"><i class="bi bi-truck"></i></span>
                        <h5>Freight Hauling</h5>
                        <p class="text-muted small">Full truckload & LTL services nationwide.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-box">
                        <span class="material-symbols-outlined text-warning fs-1 mb-3"><i class="bi bi-diagram-3"></i></span>
                        <h5>Logistics Management</h5>
                        <p class="text-muted small">End-to-end supply chain planning & execution.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-box">
                        <span class="material-symbols-outlined text-warning fs-1 mb-3">    <i class="fas fa-warehouse"></i></span>
                        <h5>Warehousing</h5>
                        <p class="text-muted small">Flexible storage for all your inventory needs.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Testimonials -->
    <section class="py-5">
        <div class="container text-center">
            <h2 class="fw-bold mb-3">What Our Clients Say</h2>
            <p class="text-muted mb-4">Building trust, one delivery at a time.</p>
            <div class="col-lg-6 mx-auto bg-white shadow-sm rounded p-4">
                <p class="fst-italic">
                    "Joy Tara Transport has been a game-changer for our supply chain. Their on-time delivery
                    record is impeccable and their team is professional."
                </p>
                <h6 class="fw-bold text-primary mt-3 mb-0">Biman Pal</h6>
                <small class="text-muted">Owner & Manager</small>
            </div>
        </div>
    </section>

    <!-- Contact / Quote Form -->
    <section class="py-5 bg-light" id="contact">
        <div class="container">
            <div class="row align-items-center g-4">
                <div class="col-md-6">
                    <h2 class="fw-bold">Get a Free Quote</h2>
                    <p class="text-muted">Ready to get started? Fill out the form and our logistics team will get in touch.</p>
                    <ul class="list-unstyled mt-4">
                        <li class="mb-2"><span class="material-symbols-outlined text-primary me-2"><i class="bi bi-geo-alt"></i></span>Amlagora New Market, Garhbeta, West Bengal</li>
                        <li class="mb-2"><span class="material-symbols-outlined text-primary me-2"><i class="bi bi-telephone"></i></span><a href="callto:8509362322" class="text-decoration-none text-dark">+91 8509362322</a></li>
                        <li><span class="material-symbols-outlined text-primary me-2"><i class="bi bi-envelope"></i></span><a href="mailto:bidmanpal.self@gmail.com" class="text-decoration-none text-dark">bimanpal.self@gmail.com</a></li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <form class="bg-white p-4 rounded shadow-sm">
                        <div class="row g-3">
                            <div class="col-md-6"><input type="text" class="form-control" placeholder="Your Name" /></div>
                            <div class="col-md-6"><input type="text" class="form-control" placeholder="Company Name" /></div>
                            <div class="col-md-6"><input type="email" class="form-control" placeholder="Email Address" /></div>
                            <div class="col-md-6"><input type="tel" class="form-control" placeholder="Phone Number" /></div>
                            <div class="col-12">
                                <select class="form-select">
                                    <option selected disabled>--Service Needed--</option>
                                    <option>Logistics Management</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <textarea class="form-control" rows="4" placeholder="Your Message"></textarea>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 mt-3">Request an Estimate</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</main>

