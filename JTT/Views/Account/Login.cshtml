@model JTT.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

<!-- ✅ REQUIRED LIBRARIES -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<style>
    body {
        font-family: 'Manrope', sans-serif;
        background-color: #F5F5F5;
        color: #333333;
        margin: 0;
    }

    .bg-primary-custom {
        background-color: #003366 !important;
    }

    .text-primary-custom {
        color: #003366 !important;
    }

    .text-secondary-custom {
        color: #FF9900 !important;
    }

    .btn-primary-custom {
        background-color: #003366;
        border: none;
    }

        .btn-primary-custom:hover {
            background-color: #002244;
        }

    .login-image {
        background-image: url('../../Images/semi-truck-highway-sunset.jpg');
        background-size: cover;
        background-position: center;
    }
</style>


@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center">
        <div class="row w-100 shadow-lg rounded-4 overflow-hidden bg-white shadow-lg" style="max-width: 1100px;">

            <!-- Left Image Section -->
            <div class="col-lg-6 d-none d-lg-block login-image"></div>

            <!-- Right Login Form Section -->
            <div class="col-lg-6 p-5 d-flex flex-column justify-content-center">
                <div class="mb-4">
                    <h1 class="fw-bold text-primary-custom">Joy Tara Transport</h1>
                </div>

                <div class="mb-4">
                    <h2 class="fw-bold text-primary-custom display-6">Welcome Back</h2>
                    <p class="text-muted">Sign in to your account to continue</p>
                </div>

                <form>
                    <div class="mb-3">
                        <label for="email" class="form-label fw-semibold">Username or Email</label>
                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", @id = "email" } })
                        @* <input id="email" type="email" class="form-control form-control-lg" placeholder="Enter your username or email" required>*@
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label fw-semibold">Password</label>
                        <div class="input-group">
                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @id = "password" } })
                            @*<input id="password" type="password" class="form-control form-control-lg" placeholder="Enter your password" required>*@
                            <button class="btn btn-outline-secondary" id="togglePassword" type="button">
                                <i class="bi bi-eye-slash" id="toggleIcon"></i>
                            </button>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="rememberMe">
                            <label class="form-check-label" for="rememberMe">Remember Me</label>
                        </div>
                        <a href="#" class="text-primary-custom text-decoration-none fw-semibold">Forgot Password?</a>
                    </div>

                    <div id="feedback-area" class="text-danger small mb-3"></div>

                    <button type="submit" class="btn btn-primary-custom text-white w-100 py-3 rounded-3 fw-bold">
                        Sign In
                    </button>
                </form>

                <div class="mt-5 text-center">
                    <p class="text-muted small mb-0">© 2025 Joy Tara Transport. All Rights Reserved.</p>
                </div>
            </div>
        </div>
    </div>
}
    <script>
        // 👁️ Toggle Password Visibility
        $(document).ready(function () {
            $("#togglePassword").click(function () {
                const passwordInput = $("#password");
                const icon = $("#toggleIcon");
                const type = passwordInput.attr("type") === "password" ? "text" : "password";
                passwordInput.attr("type", type);
                icon.toggleClass("bi-eye bi-eye-slash");
            });
        });
    </script>
